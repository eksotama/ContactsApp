<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsApp.Views.AddEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryName" HorizontalOptions="Center" 
                   Placeholder="Name" 
                   Text="{Binding Name}"
                   />
            <Entry x:Name="entryNumber" HorizontalOptions="Center" 
                   Placeholder="Phone Number" Text="{Binding Number}"/>
            <Button x:Name="btnSave" Clicked="BtnSave_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>